@import'./variables.styl';

.card
  position relative
  border 1px solid $pink
  background-color $lil
  background linear-gradient(to bottom, alpha($lil + 50%, .7) 0%, alpha($lil + 90%, .2) 100%)
  margin 10px
  box-shadow 0 0 10px 3px $Gray + 20%
  transition .5s
  &__head
    padding 10px 0
    text-align center
    > h3
      color $lil - 20%
  &__img
    padding 5px 15px
    > img
      max-width 100%
  &__description
    padding 10px
    > p
      text-align center
      font-style italic
      color $pink - 20%
  &__reserved
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    color $lightGray - 10%
    text-transform uppercase
    letter-spacing 10px
    font-size 1.2rem

    text-shadow 0 0 10px $lightGray - 40%

  &__buttons
    padding 15px 20px
    font-size 1rem

    .btn
      padding 7px 45px
      color $pink - 30%
      font-size 1rem
      cursor pointer
      transition .5s
      &:hover
        transform scale(1.01, 1.01)
        transition .5s

  &:hover
    box-shadow 0 0 10px 7px $Gray + 20%
    transform scale(1.01, 1.01)
    transition .5s

.reserved.card
  border 1px solid $lightGray
  background-color $lightGray + 40%
  .card__head
    > h3
      color $lightGray
  .card__img
    > img
      filter grayscale(100%)
      opacity .5
  .card__description
    > p
      color $lightGray
  .card__buttons
    padding 15px 20px
    font-size 1rem
    .btn
      color $lightGray - 20%
      &:hover
        transform scale(1.0, 1.0)

  &:hover
    box-shadow 0 0 10px 3px $Gray + 20%
    transform scale(1.0, 1.0)
    transition .5s