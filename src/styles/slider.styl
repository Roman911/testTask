@import'./variables.styl';

.slider
  margin 50px auto
  width 80%
  height 100%
  position relative
  box-shadow 0 0 10px 7px $Gray + 20%
  &__slides
    position relative
    margin 0 auto
    width auto
    height 0
    padding-bottom 66%
    &_slide
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      z-index 1
      transition opacity 1s
      background-size cover
      &:nth-of-type(1)
        background-image url('./../assets/image/slide_01.jpg')
      &:nth-of-type(2)
        background-image url('./../assets/image/slide_02.jpg')
      &:nth-of-type(3)
        background-image url('./../assets/image/slide_03.jpg')
      &:nth-of-type(4)
        background-image url('./../assets/image/slide_04.jpg')
      &:nth-of-type(5)
        background-image url('./../assets/image/slide_05.jpg')
      &:nth-of-type(6)
        background-image url('./../assets/image/slide_06.jpg')
      &:nth-of-type(7)
        background-image url('./../assets/image/slide_07.jpg')
      &:nth-of-type(8)
        background-image url('./../assets/image/slide_08.jpg')
      &:nth-of-type(9)
        background-image url('./../assets/image/slide_09.jpg')
      &:nth-of-type(10)
        background-image url('./../assets/image/slide_10.jpg')

.showing
  opacity 1
  z-index 2

@media screen and (max-width: $mobile)
  .slider
    width 95%
    margin 35px auto