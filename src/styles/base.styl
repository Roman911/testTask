$baseFontSize=16px;
$pageContentMaxWidth=1260px;

html
  font-size $baseFontSize
  font-family Fregat_regular
  min-height 100vh

body
  padding 0
  margin 0
  min-height 100vh

h1,h2,h3,h4,p,ul
  margin 0
  padding 0

h1
  font-size 2.1rem

li
  list-style none

a
  text-decoration none

.page-wrapper
  box-sizing border-box

.page-content
  max-width $pageContentMaxWidth
  margin 0 auto
  height 100%