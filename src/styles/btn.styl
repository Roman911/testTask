@import'./variables.styl';

.btn
  box-sizing border-box
  padding 15px 20px
  border 2px solid $green
  border-radius 5px
  text-transform uppercase
  font-family PT_Sans_bold
  cursor pointer
  &_green
    background-color $green
    color $white
    transition .5s
    min-width 170px
    &:hover
      background none
      color $green
      transition .5s
  &_transparent
    background none
    color $green
    transition .5s
    &:hover
      background-color $green
      color $white
      transition .5s
  &_circle
    border-radius 50%
    opacity 1
    background none
    width 55px
    height 55px
    &:hover
      background-color $green
  &_gray
    border 2px solid $Gray
    padding 10px 50px
    font-size .9rem
    &:hover
      background-color alpha($Gray, 0.3)