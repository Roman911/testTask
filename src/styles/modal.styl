@import'./variables.styl';

.modal
  .blocking.showed
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    background-color alpha($Gray, .75)
    .window
      position fixed
      border 1px solid $Gray + 40%
      width 60%
      max-height 100%
      top 50%
      left 50%
      transform translate(-50%, -50%)
      background-color $white


