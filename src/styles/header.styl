@import'./variables.styl';

.head
  margin-top 55px
  height 100vh
  .header
    background: linear-gradient(to right, alpha($lightGreen, 1) 0%, alpha($lightGreen, 1) 45%, alpha($lightGreen, 0) 55%, alpha($lightGreen, 0) 100%), url('./../assets/image/img_01.jpg')
    background-position center, right
    background-repeat no-repeat
    .block-ifo
      padding 110px 55px 80px
      &__head
        > h2
          line-height 1.3
          text-align justify
          font-size 1.7rem
          color $green
      &__text
        margin 40px 0
        > p
          line-height 1.5
          font-family PT_Sans_regular
          font-weight 600
          color $Gray
      .buttons
        margin-top 85px
  .about
    background-color $green
    .content-block
      padding 45px 55px
      > h2
        color $white
    .block-item
      padding 45px 0